<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="FirstWindow.xaml">
    <Application.Resources>
        <local:PLWorkerExperienceCollection x:Key="PLWorkerExperienceCollectionKey"/>
        <local:WorkerExperienceCollection x:Key="WorkerExperienceCollectionKey"/>
        <local:ConvertIdToContent x:Key="ConverIdToContentKey"/>
        <local:ConvertIdToBool x:Key="ConvertIdToBoolKey"/>
        <local:ConvertDateToBool x:Key="ConvertDateToBoolKey"/>
        <local:ProjectStatusCollection x:Key="ProjectStatusCollectionKey"/>
        <local:StatusCollection x:Key="StatusCollectionKey"/>
        <local:PLStatusCollection x:Key="PLStatusCollectionKey"/>
        <local:ConvertLevelToVisibaleManager x:Key="ConvertLevelToVisibaleManagerKey"/>
        <local:ConvertLevelToVisibaleWorker x:Key="ConvertLevelToVisibaleWorkerKey"/>
        <local:ConvertStatusToBool x:Key="ConvertStatusToBoolKey"/>
        <local:ConvertBoolToVisibale x:Key="ConvertBoolToVisibaleKey"/>
        <local:ConvertLevelToBool x:Key="ConvertLevelToBoolKey"/>
        <local:ConvertLevelAndDateToBool x:Key="ConvertLevelAndDateToBoolKey"/>
        <local:ConvertStatusAndLevelToBool x:Key="ConvertStatusAndLevelToBoolKey"/>
        <local:ConvertStatusToBoolStartTask x:Key="ConvertStatusToBoolStartTaskKey"/>
        <local:ConvertStatusToBoolEndTask x:Key="ConvertStatusToBoolEndTaskKey"/>

        <Style x:Key="LabelKey" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        
        <Style x:Key="ButtonKey" TargetType="Button">
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>

        <Style x:Key="MainButtonKey" TargetType="Button">
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF267513"/>
            <Setter Property="BorderBrush" Value="#FF52AC3D"/>
        </Style>

        <Style x:Key="GridKey" TargetType="Grid">
            <Setter Property="Background" Value="#FFE4EEDF"/>
        </Style>

        <Style x:Key="ListViewKey" TargetType="ListView">
            <Setter Property="Background" Value="#FFE4EEDF"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>

